<% include partials/header %>

<div class="row" style="flex-direction: column">
    <h1 class="text-center">Sign Up</h1>
    <div class="form-login-reg">
        <form action="/register" method="post">
            <div class="md-form">
                <i class="fa fa-user prefix grey-text"></i>
                <input type="text" id="username" name="username" class="form-control">
                <label for="username">Username</label>
            </div>
            <div class="md-form">
                <i class="prefix grey-text fa fa-lock"></i>
                <input type="password" id="password" name="password" class="form-control">
                <label for="password">Password</label>
            </div>
            <div class="md-form">
                <i class="prefix grey-text fa fa-user-circle"></i>
                <input type="text" id="firstName" name="firstName" class="form-control">
                <label for="firstName">First Name</label>
            </div>
            <div class="md-form">
                <i class="prefix grey-text fa fa-user-circle"></i>
                <input type="text" id="lastName" name="lastName" class="form-control">
                <label for="lastName">Last Name</label>
            </div>
            <div class="md-form">
                <i class="prefix grey-text fa fa-envelope"></i>
                <input type="email" id="email" name="email" class="form-control">
                <label for="email">Email</label>
            </div>
            <div class="md-form">
                <i class="prefix grey-text fa fa-user-secret"></i>
                <input type="text" id="avatar" name="avatar" class="form-control">
                <label for="avatar">Avatar</label>
            </div>
            <div class="md-form">
                <i class="prefix grey-text fa fa-align-left"></i>
                <input type="text" id="description" name="description" class="form-control">
                <label for="description">Bio</label>
            </div>
            <div class="md-form">
                <i class="prefix grey-text fa fa-code"></i>
                <input type="password" id="adminCode" name="adminCode" class="form-control">
                <label for="adminCode">Admin Code</label>
            </div>
            <div class="form-group">
                <!-- Insert the code for the reCaptcha check box -->
                <div class="g-recaptcha" data-sitekey="6LeWRk4UAAAAAD0Qr0qYPsWwsOP__U3psyZh3ZJG"></div>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include partials/footer %>